<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projekt_po1.sceneFunction.ZabiegiMenuController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="100.0" layoutY="20.0" prefHeight="460.0" prefWidth="500.0" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label fx:id="uprawaDetailsLabel" text="Zabiegi dla uprawy: [Nazwa Uprawy]" style="-fx-font-size: 20px; -fx-font-weight: bold;">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <TableView fx:id="zabiegiTable" prefHeight="250.0" prefWidth="460.0">
                <columns>
                    <TableColumn fx:id="nazwaColumn" prefWidth="90.0" text="Nazwa" />
                    <TableColumn fx:id="typColumn" prefWidth="80.0" text="Typ" />
                    <TableColumn fx:id="dataColumn" prefWidth="90.0" text="Data" />
                    <TableColumn fx:id="dawkaColumn" prefWidth="70.0" text="Dawka" />
                    <TableColumn fx:id="kosztColumn" prefWidth="80.0" text="Koszt" />
                    <TableColumn fx:id="rodzajZabieguColumn" prefWidth="100.0" text="Rodzaj Zabiegu" />
                    <TableColumn fx:id="zarobekColumn" prefWidth="80.0" text="Zarobek" />
                </columns>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </TableView>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="addZabiegButton" mnemonicParsing="false" onAction="#addZabieg" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="➕ Dodaj Zabieg" />
                <Button fx:id="deleteZabiegButton" mnemonicParsing="false" onAction="#deleteZabieg" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="🗑️ Usuń Zabieg" />
            </HBox>

            <Button fx:id="backToUprawyButton" mnemonicParsing="false" onAction="#goBackToUprawy" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="↩️ Wróć do Upraw" />
        </VBox>
    </children>
</AnchorPane>
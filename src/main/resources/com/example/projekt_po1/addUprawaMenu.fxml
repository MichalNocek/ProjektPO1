<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="550.0" prefWidth="650.0" style="-fx-background-color: #f0f8f0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projekt_po1.sceneFunction.AddUprawaMenuController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="100.0" layoutY="50.0" prefHeight="450.0" prefWidth="450.0" spacing="20.0" style="-fx-background-color: white; -fx-border-radius: 15; -fx-background-radius: 15;">
            <effect>
                <DropShadow color="#00000033" offsetX="3" offsetY="3" radius="5"/>
            </effect>
            <padding>
                <Insets bottom="25.0" left="40.0" right="40.0" top="25.0" />
            </padding>
            <Label text="➕ Dodaj nową uprawę" textFill="#2e8b57">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" spacing="15.0">
                <children>
                    <Label prefWidth="150.0" text="Nazwa Uprawy:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="nazwaUprawyField" HBox.hgrow="ALWAYS" promptText="Wprowadź nazwę uprawy" style="-fx-border-color: #a9a9a9; -fx-border-radius: 5; -fx-padding: 8 10;" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" spacing="15.0">
                <children>
                    <Label prefWidth="150.0" text="Data Siewu:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="dataSiewuPicker" HBox.hgrow="ALWAYS" promptText="Wybierz datę siewu" style="-fx-border-color: #a9a9a9; -fx-border-radius: 5; -fx-padding: 8 10;" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" spacing="15.0">
                <children>
                    <Label prefWidth="150.0" text="Data Zbioru (opcjonalnie):">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="dataZbioruPicker" HBox.hgrow="ALWAYS" promptText="Wybierz datę zbioru" style="-fx-border-color: #a9a9a9; -fx-border-radius: 5; -fx-padding: 8 10;" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" spacing="15.0">
                <children>
                    <Label prefWidth="150.0" text="Zysk (opcjonalnie):">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="zyskField" HBox.hgrow="ALWAYS" promptText="Wprowadź zysk" style="-fx-border-color: #a9a9a9; -fx-border-radius: 5; -fx-padding: 8 10;" />
                </children>
            </HBox>
            <Button onAction="#addUprawa" prefHeight="45.0" prefWidth="200.0" text="✅ Dodaj Uprawę" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projekt_po1.sceneFunction.AddUprawaMenuController">
    <children>
        <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" prefHeight="300.0" prefWidth="400.0" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="Dodaj nową uprawę" textFill="#2a2929">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="360.0" spacing="10.0">
                <children>
                    <Label prefWidth="120.0" text="Nazwa Uprawy:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="nazwaUprawyField" prefWidth="230.0" promptText="Wprowadź nazwę uprawy" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="360.0" spacing="10.0">
                <children>
                    <Label prefWidth="120.0" text="Data Siewu:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="dataSiewuPicker" prefWidth="230.0" promptText="Wybierz datę siewu" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="360.0" spacing="10.0">
                <children>
                    <Label prefWidth="120.0" text="Data Zbioru (opcjonalnie):">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="dataZbioruPicker" prefWidth="230.0" promptText="Wybierz datę zbioru" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="360.0" spacing="10.0">
                <children>
                    <Label prefWidth="120.0" text="Zysk (opcjonalnie):">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="zyskField" prefWidth="230.0" promptText="Wprowadź zysk" />
                </children>
            </HBox>
            <Button onAction="#addUprawa" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="Dodaj Uprawę">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </children>
</AnchorPane>
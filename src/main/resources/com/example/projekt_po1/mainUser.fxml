<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projekt_po1.sceneFunction.MainController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="100.0" layoutY="20.0" prefHeight="460.0" prefWidth="500.0" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label text="Twoje Pola Uprawne" style="-fx-font-size: 24px; -fx-font-weight: bold;">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <TableView fx:id="fieldTable" prefHeight="250.0" prefWidth="460.0">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nazwa Pola" />
                    <TableColumn fx:id="areaColumn" prefWidth="120.0" text="Powierzchnia (ha)" />
                    <TableColumn fx:id="localisationColumn" prefWidth="180.0" text="Lokalizacja" />
                </columns>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </TableView>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddField" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="➕ Dodaj Pole" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteField" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="🗑️ Usuń Pole" />
                <Button fx:id="showUprawyButton" mnemonicParsing="false" onAction="#handleShowUprawy" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="🌱 Pokaż Uprawy" />
            </HBox>

            <Button fx:id="logoutButton" mnemonicParsing="false" onMouseClicked="#wyloguj_sie" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="➡️ Wyloguj się" />
        </VBox>
    </children>
</AnchorPane>
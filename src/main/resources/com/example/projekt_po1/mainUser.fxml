<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #f0f8f0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projekt_po1.sceneFunction.MainController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="30.0" prefHeight="490.0" prefWidth="650.0" spacing="20" style="-fx-background-color: white; -fx-border-radius: 15; -fx-background-radius: 15;">
            <effect>
                <DropShadow color="#00000033" offsetX="3" offsetY="3" radius="5"/>
            </effect>
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>

            <Label text="Twoje Pola Uprawne" textFill="#2e8b57">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <TableView fx:id="fieldTable" prefHeight="300.0" prefWidth="600.0" style="-fx-border-color: #a9a9a9; -fx-border-radius: 5; -fx-background-radius: 5;">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Nazwa Pola" />
                    <TableColumn fx:id="areaColumn" prefWidth="150.0" text="Powierzchnia (ha)" />
                    <TableColumn fx:id="localisationColumn" prefWidth="248.0" text="Lokalizacja" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddField" prefHeight="40.0" prefWidth="150.0" text="➕ Dodaj Pole" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteField" prefHeight="40.0" prefWidth="150.0" text="🗑️ Usuń Pole" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);" />
                <Button fx:id="showUprawyButton" mnemonicParsing="false" onAction="#handleShowUprawy" prefHeight="40.0" prefWidth="150.0" text="🌱 Pokaż Uprawy" style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);" />
            </HBox>

            <Button fx:id="logoutButton" mnemonicParsing="false" onMouseClicked="#wyloguj_sie" prefHeight="40.0" prefWidth="150.0" text="➡️ Wyloguj się" style="-fx-background-color: #607d8b; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 3);">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </children>
</AnchorPane>
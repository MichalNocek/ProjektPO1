<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projekt_po1.sceneFunction.UprawaController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="100.0" layoutY="20.0" prefHeight="460.0" prefWidth="500.0" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label fx:id="fieldDetailsLabel" text="Uprawy dla pola: [Nazwa Pola]" style="-fx-font-size: 20px; -fx-font-weight: bold;">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <TableView fx:id="uprawaTable" prefHeight="250.0" prefWidth="460.0">
                <columns>
                    <TableColumn fx:id="nazwaUprawyColumn" prefWidth="120.0" text="Nazwa Uprawy" />
                    <TableColumn fx:id="dataSiewuColumn" prefWidth="100.0" text="Data Siewu" />
                    <TableColumn fx:id="dataZbioruColumn" prefWidth="100.0" text="Data Zbioru" />
                    <TableColumn fx:id="zyskColumn" prefWidth="100.0" text="Zysk" />
                </columns>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </TableView>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="addUprawaButton" mnemonicParsing="false" onAction="#addUprawa" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="➕ Dodaj Uprawę" />
                <Button fx:id="deleteUprawaButton" mnemonicParsing="false" onAction="#deleteUprawa" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="🗑️ Usuń Uprawę" />
                <Button fx:id="showZabiegiButton" mnemonicParsing="false" onAction="#showZabiegi" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="🛠️ Pokaż Zabiegi" />
            </HBox>

            <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBackToMain" style="-fx-font-size: 14px; -fx-padding: 8px 20px;" text="↩️ Wróć do Pól" />
        </VBox>
    </children>
</AnchorPane>